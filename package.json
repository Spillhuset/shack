{
  "name": "shack",
  "main": "build",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "docker": "npm run docker:build && npm run docker:up",
    "docker:build": "docker-compose --project-directory . build",
    "docker:down": "docker-compose --project-directory . down",
    "docker:logs": "docker-compose --project-directory . logs --tail=500 -f",
    "docker:start": "npm run docker:up",
    "docker:stop": "npm run docker:down",
    "docker:up": "docker-compose --project-directory . up -d",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node .",
    "test": "jest"
  },
  "dependencies": {
    "@sapphire/type": "2.6.0",
    "@typegoose/typegoose": "12.17.0",
    "bufferutil": "4.0.9",
    "dedent": "1.6.0",
    "discord.js": "14.22.1",
    "dotenv": "17.2.3",
    "html-entities": "2.6.0",
    "html-to-md": "0.8.8",
    "match-sorter": "8.1.0",
    "mongoose": "8.17.0",
    "safe-timers": "1.1.0",
    "winston": "3.18.3",
    "winston-daily-rotate-file": "5.0.0",
    "zlib-sync": "0.1.10"
  },
  "devDependencies": {
    "@tsconfig/node22": "22.0.2",
    "@tsconfig/strictest": "2.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "22.18.8",
    "@types/safe-timers": "1.1.2",
    "eslint": "9.37.0",
    "eslint-config-promise": "github:promise/eslint-config",
    "jest": "30.2.0",
    "ts-jest": "29.4.4",
    "typescript": "5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "packageManager": "pnpm@10.18.1"
}
